<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_inherit_djbc" model="ir.ui.view">
        <field name="name">product.template.form.inherit.djbc</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tag_ids']" position="after">
                <group name="djbc_information" string="DJBC">
                    <group>
                        <field name="djbc_category_id"/>
                        <field name="hscode"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>