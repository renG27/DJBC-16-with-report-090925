<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_djbc_docs_tree" model="ir.ui.view">
        <field name="name">djbc.docs.tree</field>
        <field name="model">djbc.docs</field>
        <field name="arch" type="xml">
            <tree string="DJBC Documents" js_class="djbc_list_with_import">
                <field name="no_dok"/>
                <field name="tgl_dok"/>
                <field name="jenis_dok"/>
                <field name="nm_cargoowner"/>
                <field name="is_locked" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_djbc_docs_form" model="ir.ui.view">
        <field name="name">djbc.docs.form</field>
        <field name="model">djbc.docs</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_unlock" type="object" string="Edit Record" class="oe_highlight" attrs="{'invisible': [('is_locked', '=', False)]}"/>
                </header>
                <sheet>
                    <field name="is_locked" invisible="1"/>
                    <group>
                        <group>
                            <field name="jenis_dok" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="no_dok" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="tgl_dok" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="no_aju" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="tgl_aju" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="forwarder_name" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="id_ff_ppjk" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="nm_cargoowner" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="npwpCargoOwner" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Containers">
                            <field name="container_ids" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_djbc_docs" model="ir.actions.act_window">
        <field name="name">DJBC Documents</field>
        <field name="res_model">djbc.docs</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_djbc_docs_tree"/>
        <field name="context">{'import_enabled': True}</field>
    </record>
</odoo>